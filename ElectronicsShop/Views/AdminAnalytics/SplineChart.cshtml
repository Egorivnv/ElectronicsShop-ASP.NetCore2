@{
    ViewBag.Title = "Sales Analytics";
    Layout = "_AdminLayout";
}


<div id="chartContainer" style="height: 350px; width: 100%;"></div>

<div class="text-center mt-5">
    <h3>Total sales: @ViewBag.TotalSales.ToString("c")</h3>
</div>

@section addscripts {
    window.onload = function () {

    var options = {
    exportEnabled: true,
    animationEnabled: true,
    title: {
    text: "@ViewBag.GrafTitle"
    },
    axisX: {
    title: "Date period",
    },
    axisY: {
    title: "Sales (in USD)",
    prefix: "$",
    includeZero: false
    },
    data: [{
    yValueFormatString: "$#.##",
    type: "spline",

    dataPoints: @Html.Raw(ViewBag.DataRow)

    }]
    };
    $("#chartContainer").CanvasJSChart(options);

    }
}



