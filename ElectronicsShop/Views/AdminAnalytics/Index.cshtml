@{
    ViewBag.Title = "Analytics";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-2 px-0">
        <div class="list-group">
            <a asp-action="Index" asp-controller="Admin" class="list-group-item list-group-item-action ">
                Product catalog
            </a>
            <a asp-action="Index" asp-controller="AdminOrders" class="list-group-item list-group-item-action">Orders</a>
            <a asp-action="Index" asp-controller="AdminStock" class="list-group-item list-group-item-action">Products stock</a>
            <button type="button" class="list-group-item list-group-item-action active">Sales analytics</button>
            <a asp-action="Index" asp-controller="AdminForecast" class="list-group-item list-group-item-action">Sales forecasting</a>
            <a asp-action="Index" asp-controller="AdminSupplyPlanning" class="list-group-item list-group-item-action" disabled>Planning goods supplyings</a>
        </div>
    </div>
    <div class="col-md-10 p-0">
        <div class="card">
            <div class="card-header text-left">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item w-50 text-center">
                        <a class="nav-link btn-lg text-uppercase font-weight-bold active">Sales analytics</a>
                    </li>
                    <li class="nav-item w-50 text-center">
                        <a  asp-action="ComparativeSalesAnalytics" class="nav-link text-dark btn-lg text-uppercase font-weight-bold ">Comparative sales analytics</a>
                    </li>
                </ul>
                
            </div>
            <div class="card-body">
                <div class="container-fluid mx-3">
                    <form class="form-inline" method="post" asp-controller="AdminAnalytics" asp-action="ShowAnalysis">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <h3 class="card-title text-center">Sales analytics</h3>
                            </li>
                            <li class="list-group-item">
                                <div class="row my-4">
                                    @await Component.InvokeAsync("AdminApplyAnalylics")
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row mb-4">
                                    <div class="form-inline mt-4">
                                        <h5 class="mx-3"><label for="dateFrom">Date from:</label></h5>
                                        <input required id="dateFrom" type='date' class="form-control" name="DateFrom" />

                                        <h5 class="mx-3"><label for="dateTo">Date to:</label></h5>
                                        <input required id="dateTo" type='date' class="form-control" name="DateTo" />

                                        <h5 class="mx-3"><label for="interval">Date interval:</label></h5>
                                        <select class="form-control" name="Interval" id="interval" required>
                                            @*<option selected>...</option>*@
                                            <option selected value="1">1 day</option>
                                            <option value="7">7 days</option>
                                            <option value="10">10 days</option>
                                            <option value="15">15 days</option>
                                            <option value="30">Month</option>
                                            <option value="90">Quarter</option>
                                            <option value="180">Half a year</option>
                                            <option value="365">Year</option>
                                        </select>
                                    </div>
                                    <hr />
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="row mb-4">
                                    <div class="form-inline mt-4">
                                        <h5 class="mx-3"><label for="dateFrom">Chart view:</label></h5>
                                        <select required id="dateFrom" type='date' class="form-control" name="CartView">
                                            <option selected value="0">Spline Chart</option>
                                            <option value="1">Step Line Chart</option>
                                            <option value="2">Area Chart</option>
                                            <option value="3">Spline Area Chart</option>
                                            <option value="4">Step Area Chart</option>
                                        </select>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div id="inputField" class="form-inline pb-2 pt-2">
                                    <button id="buttonSelect" style="position: relative; left: 395px" type="submit" class="btn btn-dark ">Form a report</button>
                                </div>
                            </li>
                        </ul>
                        @*<a asp-action="ShowAnalysis" asp-controller="AdminAnalytics">Form a report</a>*@
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>