@{
    ViewBag.Title = "Colunm Cart";
    Layout = "_AdminLayout";
}


<div id="chartContainer" style="height: 350px; width: 100%;"></div>

<div class="text-center mt-5">
    <h3>Total sales: @ViewBag.TotalSales.ToString("c")</h3>
</div>

@section addscripts {
    window.onload = function () {

    var options = {
    theme: "light2",
    exportEnabled: true,
    animationEnabled: true,
    title: {
    text: "@ViewBag.GrafTitle"
    },
    axisX: {
    title: "@ViewBag.xParam",
    },
    axisY: {
    title: "Sales (in USD)",
    prefix: "$",
    },
    data: [{
    type: "stepArea",
    markerSize: 6,
    yValueFormatString: "$#.##",
    dataPoints: @Html.Raw(ViewBag.DataRow)

    }]
    };
    $("#chartContainer").CanvasJSChart(options);

    }
}



