@{
    ViewBag.Title = "Product catalog";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-2 px-0">
        <div class="list-group">
            <button type="button" class="list-group-item list-group-item-action active ">
                Product catalog
            </button>
            <a asp-action="Index" asp-controller="AdminOrders" class="list-group-item list-group-item-action ">Orders</a>
            <a asp-action="Index" asp-controller="AdminStock" class="list-group-item list-group-item-action">Products stock</a>
            <a asp-action="Index" asp-controller="AdminAnalytics" class="list-group-item list-group-item-action">Sales analytics</a>
            <a asp-action="Index" asp-controller="AdminForecast" class="list-group-item list-group-item-action">Sales forecasting</a>
            <a asp-action="Index" asp-controller="AdminSupplyPlanning" class="list-group-item list-group-item-action" disabled>Planning goods supplyings</a>
        </div>
    </div>
    <div class="col-md-10 ">
        <ul class="list-group list-group-flush">
            <li class="list-group-item" >
                <form style="position:relative; left:35px" class="form-inline" method="get" asp-controller="Admin" asp-action="ShowProductTable">

                    @await Component.InvokeAsync("AdminApplyCatalog")

                    <div id="inputField" class="form-inline  ml-5">
                        <button style="position:relative; left:8px" id="buttonSelect" type="submit" class="btn btn-success">Apply</button>
                    </div>
                </form>
            </li>
        </ul>
        <h2 style="position:relative; right:75px" class="m-3 text-center mt-5">@(TempData["message"] == null ? "Choose product category" : TempData["message"])</h2>

    </div>
</div>