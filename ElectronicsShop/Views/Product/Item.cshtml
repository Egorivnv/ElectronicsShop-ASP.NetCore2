@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="w-100">
    <div class="card ">
        <h4 class="card-header pl-3 text-center">@Model.Name</h4>
        <div class="card-body ">
            <div class="row">
                <div class="col-md-5">
                    @await Component.InvokeAsync("Breadcrumb", Model.Brand ?? 0)
                    <div class="w-75">
                        @if (Model.Image != null)
        {
                <img class="card-img-top" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" alt="Card image cap" />
}
else
{
                <img src="~/images/logos/logo_elecshop.jpg" class="img-fluid" alt="Responsive image">
}
                    </div>
                </div>
                <div class="col-md-7 p-0 h-50 card">
                    <h5 class="card-header font-weight-bold text-uppercase text-center">Characteristics</h5>
                    <div class="card-body p-0">
                        <table class="table table-striped table p-0 m-0">
                            <tbody class="p-0 m-0">
                                <tr>
                                    <td class="font-weight-bold pl-4">Model name</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold pl-4">Model category</td>
                                    <td>@Model.Category</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold pl-4">Description</td>
                                    <td>@Model.Description</td>
                                </tr>
                                <tr>
                                    <td class="font-weight-bold pl-4">Price</td>
                                    <td>@Model.Price.ToString("c")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center ">
                        <form id="@Model.ProductID" class="my-3 " asp-action="AddToCart" asp-controller="Cart" method="post">
                            <input type="hidden" asp-for="ProductID" />
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

                            <button type="submit" class="btn btn-danger w-25 form-control">
                                Add To Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
