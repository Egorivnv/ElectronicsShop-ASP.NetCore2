@model IEnumerable<Product>

@{
    ViewData["Title"] = "Search results";
}

@if (Model.Count() == 0)
{
<div class="container">
    <div class="pt-5 text-center">
        <h2>Nothing's found!</h2>
    </div>
</div>
}
else
{
<div class="container">
    <table class="table table-striped my-3">
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td><a asp-action="Item" asp-controller="Product" asp-route-productId="@item.ProductID">@item.Name</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
}